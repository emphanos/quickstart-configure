# Git aware shell
export GIT_PS1_SHOWDIRTYSTATE=true
export GIT_PS1_SHOWUNTRACKEDFILES=true
PS1='\u@\h \w$(__git_ps1 " (%s)")\\$ '

# Drush command completion
if [ -f /usr/share/drush/examples/example.bashrc ] ; then 
	source /usr/share/drush/examples/example.bashrc
fi

# search in files and directories
search () { grep -rHinC0 "$*" .; }

# dereference links in current path.
deref () { cd $(pwd -P); }



